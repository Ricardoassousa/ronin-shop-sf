{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title mb-4 text-center">Create an Account</h2>

                        {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}

                        <div class="mb-3">
                            {{ form_label(registrationForm.email) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.password.first, 'Password') }}
                            {{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.password.first) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.password.second, 'Confirm Password') }}
                            {{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.password.second) }}
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>

                        {{ form_end(registrationForm) }}

                        <p class="mt-3 text-center">
                            Already have an account? <a href="{{ path('app_login') }}">Login here</a>.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}