{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt-5">

        <h1 class="fw-bold text-center mb-2">Admin Dashboard</h1>
        <p class="text-muted text-center">Overview & quick actions</p>

        <div class="row mt-5 g-4">

            <div class="col-md-6">
                <div class="card shadow-sm h-100">
                    <div class="card-body">

                        <h3 class="card-title mb-3">
                            <i class="bi bi-people me-2"></i>
                            Manage Users
                        </h3>

                        <a href="{{ path('admin_users_list') }}"
                            class="btn btn-outline-primary w-100 mb-3">
                            View all users
                        </a>

                        {% if users is not empty %}
                            <h6 class="text-muted">Latest registered users</h6>

                            <ul class="list-group">
                                {% for user in users %}
                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">{{ user.email }}</div>

                                                {% if user.customerProfile is not null %}
                                                    <small class="text-muted d-block">
                                                        {{ user.customerProfile.firstName }} {{ user.customerProfile.surname }}
                                                        {% if user.customerProfile.phone %}
                                                            - {{ user.customerProfile.phone }}
                                                        {% endif %}
                                                    </small>
                                                    {% if user.customerProfile.country %}
                                                        <small class="text-muted d-block">
                                                            {{ user.customerProfile.city }} {{ user.customerProfile.country }}
                                                        </small>
                                                    {% endif %}
                                                    <small class="text-muted d-block">
                                                        {# Joined: {{ user.customerProfile.createdAt|date('d/m/Y') }} #}
                                                    </small>
                                                {% endif %}

                                                <small class="text-muted d-block">
                                                    Roles: {{ user.roles|join(', ') }}
                                                </small>
                                            </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <div class="alert alert-light border text-center mt-3">
                                No users found.
                            </div>
                        {% endif %}

                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card shadow-sm h-100">
                    <div class="card-body">

                        <h3 class="card-title mb-3">
                            <i class="bi bi-bag-check me-2"></i>
                            Manage Orders
                        </h3>

                        <a href="{{ path('admin_orders_list') }}"
                            class="btn btn-outline-primary w-100 mb-3">
                            View all orders
                        </a>

                        {% if orders is defined and orders is not empty %}
                            <h6 class="text-muted">Latest orders</h6>

                            <ul class="list-group mt-2">
                                {% for order in orders %}
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>#{{ order.id }}</strong><br>
                                            <small class="text-muted">
                                                {{ order.user.email }}
                                            </small>
                                        </div>

                                        <small class="text-muted">
                                            {{ order.createdAt|date('d/m/Y H:i') }}
                                        </small>

                                        <span class="badge
                                            {% if order.status == 'paid' %}bg-success
                                            {% elseif order.status == 'pending' %}bg-warning
                                            {% elseif order.status == 'cancelled' %}bg-danger
                                            {% else %}bg-secondary{% endif %}
                                        ">
                                            {{ order.status|capitalize }}
                                        </span>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <div class="alert alert-light border text-center mt-3">
                                No orders found.
                            </div>
                        {% endif %}

                    </div>
                </div>
            </div>

        </div>

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}