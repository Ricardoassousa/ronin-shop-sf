{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Admin Dashboard</h1>

        <p class="text-center">Welcome to the Admin Dashboard.</p>

        <h3 class="mt-4">Manage Users</h3>

        {% if users is not empty %}
            <div class="list-group">
                {% for user in users %}
                    <a href="{{ path('admin_user_edit', { 'id': user.id }) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        {{ user.email }}
                        <span class="badge bg-primary rounded-pill">Edit Roles</span>
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning mt-3">No users found.</div>
        {% endif %}

        <div class="mt-4 text-center">
            <a href="{{ path('app_logout') }}" class="btn btn-danger">Logout</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}