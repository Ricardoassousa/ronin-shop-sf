{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <div class="container mt-4 mt-md-5">

        <h1 class="fw-bold text-center mb-2">Admin Dashboard</h1>
        <p class="text-muted text-center">Overview & quick actions</p>

        <ul class="nav nav-tabs mt-4 justify-content-center" id="adminTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active"
                        id="users-tab"
                        data-bs-toggle="tab"
                        data-bs-target="#users"
                        type="button"
                        role="tab">
                    <i class="bi bi-people me-1"></i>
                    Users
                </button>
            </li>

            <li class="nav-item" role="presentation">
                <button class="nav-link"
                        id="orders-tab"
                        data-bs-toggle="tab"
                        data-bs-target="#orders"
                        type="button"
                        role="tab">
                    <i class="bi bi-bag-check me-1"></i>
                    Orders
                </button>
            </li>
        </ul>

        <div class="tab-content mt-4" id="adminTabsContent">

            <div class="tab-pane fade show active"
                 id="users"
                 role="tabpanel"
                 aria-labelledby="users-tab">

                <div class="card shadow-sm">
                    <div class="card-body">

                        <h3 class="card-title mb-3">
                            <i class="bi bi-people me-2"></i>
                            Manage Users
                        </h3>

                        <a href="{{ path('admin_users_list') }}"
                           class="btn btn-outline-primary w-100 mb-3">
                            View all users
                        </a>

                        {% if users is not empty %}
                            <h6 class="text-muted">Latest registered users</h6>

                            <ul class="list-group">
                                {% for user in users %}
                                    <li class="list-group-item
                                               d-flex
                                               flex-column
                                               flex-sm-row
                                               justify-content-between
                                               align-items-start">

                                        <div class="me-auto text-break">
                                            <div class="fw-bold">{{ user.email }}</div>

                                            {% if user.customerProfile %}
                                                <small class="text-muted d-block">
                                                    {{ user.customerProfile.firstName }}
                                                    {{ user.customerProfile.surname }}
                                                </small>
                                            {% endif %}

                                            <small class="text-muted d-block">
                                                Roles: {{ user.roles|join(', ') }}
                                            </small>
                                        </div>

                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <div class="alert alert-light border text-center mt-3">
                                No users found.
                            </div>
                        {% endif %}

                    </div>
                </div>
            </div>

            <div class="tab-pane fade"
                 id="orders"
                 role="tabpanel"
                 aria-labelledby="orders-tab">

                <div class="card shadow-sm">
                    <div class="card-body">

                        <h3 class="card-title mb-3">
                            <i class="bi bi-bag-check me-2"></i>
                            Manage Orders
                        </h3>

                        <a href="{{ path('admin_orders_list') }}"
                           class="btn btn-outline-primary w-100 mb-3">
                            View all orders
                        </a>

                        {% if orders is defined and orders is not empty %}
                            <h6 class="text-muted">Latest orders</h6>

                            <ul class="list-group mt-2">
                                {% for order in orders %}
                                    <li class="list-group-item
                                               d-flex
                                               flex-column
                                               flex-sm-row
                                               justify-content-between
                                               align-items-start
                                               align-items-sm-center">

                                        <div class="text-break mb-2 mb-sm-0">
                                            <strong>#{{ order.id }}</strong><br>
                                            <small class="text-muted">
                                                {{ order.user.email }}
                                            </small>
                                        </div>

                                        <small class="text-muted mb-2 mb-sm-0">
                                            {{ order.createdAt|date('d/m/Y H:i') }}
                                        </small>

                                        <span class="badge
                                            {% if order.status == 'paid' %}bg-success
                                            {% elseif order.status == 'pending' %}bg-warning
                                            {% elseif order.status == 'cancelled' %}bg-danger
                                            {% else %}bg-secondary{% endif %}">
                                            {{ order.status|capitalize }}
                                        </span>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <div class="alert alert-light border text-center mt-3">
                                No orders found.
                            </div>
                        {% endif %}

                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}