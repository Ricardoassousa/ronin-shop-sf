{% extends 'base.html.twig' %}

{% block title %}Edit User Roles{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title mb-4 text-center">Edit Roles for {{ user.email }}</h2>

                        {{ form_start(form) }}

                        <div class="mb-3">
                            {{ form_label(form.roles) }}

                            <div class="form-check">
                                {% for child in form.roles %}
                                    <div class="form-check">
                                        {{ form_widget(child, {
                                            'attr': {
                                                'class': 'form-check-input' ~ (child.vars.errors|length ? ' is-invalid' : '')
                                            }
                                        }) }}
                                        {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                    </div>
                                {% endfor %}
                            </div>

                            {% for error in form.roles.vars.errors %}
                                <div class="invalid-feedback d-block">
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
                        </div>

                        {{ form_end(form) }}

                        <div class="mt-3 text-center">
                            <a href="{{ path('admin_users_list') }}" class="btn btn-secondary">Back to Users list</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}