{% extends 'base.html.twig' %}

{% block title %}Users List{% endblock %}

{% block body %}
    <div class="container mt-4 mt-md-5">

        <h1 class="mb-4 text-center">Users List</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% if pagination|length > 0 %}
            <ul class="list-group">

                {% for user in pagination %}
                    <li class="list-group-item
                               d-flex
                               flex-column
                               flex-sm-row
                               justify-content-between
                               align-items-start
                               align-items-sm-center">

                        <div class="text-break mb-2 mb-sm-0">
                            <strong>{{ user.email }}</strong><br>

                            {% if user.customerProfile %}
                                <small class="text-muted d-block">
                                    {{ user.customerProfile.firstName }}
                                    {{ user.customerProfile.surname }}
                                    {% if user.customerProfile.phone %} - {{ user.customerProfile.phone }}{% endif %}
                                </small>
                                {% if user.customerProfile.country %}
                                    <small class="text-muted d-block">
                                        {{ user.customerProfile.city }} {{ user.customerProfile.country }}
                                    </small>
                                {% endif %}
                            {% endif %}

                            <small class="text-muted d-block">
                                Roles: {{ user.roles|join(', ') }}
                            </small>
                        </div>

                        <div class="d-flex gap-2 flex-column flex-sm-row align-items-start align-items-sm-center">
                            <a href="{{ path('admin_user_edit', { id: user.id }) }}"
                               class="btn btn-sm btn-outline-primary w-100 w-sm-auto">
                                Edit roles
                            </a>
                        </div>

                    </li>
                {% endfor %}
            </ul>

            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% else %}
            <div class="alert alert-light border text-center">
                No users found.
            </div>
        {% endif %}

        <div class="mt-4 text-center text-md-start">
            <a href="{{ path('admin_dashboard') }}"
               class="btn btn-secondary w-100 w-md-auto">
                Back to Dashboard
            </a>
        </div>

    </div>
{% endblock %}