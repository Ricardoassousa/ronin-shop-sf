{% extends 'base.html.twig' %}

{% block title %}Order #{{ order.id }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt-5">

        <h1 class="mb-4 text-center">Order #{{ order.id }}</h1>

        <div class="card shadow-sm">
            <div class="card-body">

                <h5>User</h5>
                <p>{{ order.user.email }}</p>

                <h5>Status</h5>
                <span class="badge
                    {% if order.status == 'paid' %}bg-success
                    {% elseif order.status == 'pending' %}bg-warning
                    {% elseif order.status == 'cancelled' %}bg-danger
                    {% else %}bg-secondary{% endif %}
                ">
                    {{ order.status|capitalize }}
                </span>

                <div class="mt-2">
                    <a href="{{ path('admin_order_edit', { id: order.id }) }}" 
                        class="btn btn-sm btn-outline-primary">
                        Edit Status
                    </a>
                </div>

                <h5 class="mt-3">Created At</h5>
                <p>{{ order.createdAt|date('d/m/Y H:i') }}</p>

                {% if order.items is not empty %}
                    <h5 class="mt-3">Items</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in order.items %}
                                <tr>
                                    <td>{{ item.product.name }}</td>
                                    <td>{{ item.quantity }}</td>
                                    <td>{{ item.unitPrice|number_format(2, '.', ',') }} â‚¬</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}

                <div class="mt-4">
                    <a href="{{ path('admin_orders_list') }}" class="btn btn-secondary">
                        Back to Orders
                    </a>
                </div>

            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}