{% extends 'base.html.twig' %}

{% block title %}Order #{{ order.id }}{% endblock %}

{% block body %}
    <div class="container mt-4 mt-md-5">

        <h1 class="mb-4 text-center">Order #{{ order.id }}</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="card shadow-sm">
            <div class="card-body">

                <h5>User</h5>
                <p>{{ order.user.email }}</p>

                <h5>Status</h5>
                <div class="d-flex flex-column flex-sm-row align-items-start align-items-sm-center gap-2 mb-2">
                    <span class="badge
                        {% if order.status == 'paid' %}bg-success
                        {% elseif order.status == 'pending' %}bg-warning
                        {% elseif order.status == 'cancelled' %}bg-danger
                        {% else %}bg-secondary{% endif %}
                    ">
                        {{ order.status|capitalize }}
                    </span>

                    <a href="{{ path('admin_order_edit', { id: order.id }) }}"
                       class="btn btn-sm btn-outline-primary w-100 w-sm-auto">
                        Edit Status
                    </a>
                </div>

                <h5 class="mt-3">Created At</h5>
                <p>{{ order.createdAt|date('d/m/Y H:i') }}</p>

                {% if order.items is not empty %}
                    <h5 class="mt-3">Items</h5>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in order.items %}
                                    <tr>
                                        <td>{{ item.product.name }}</td>
                                        <td>{{ item.quantity }}</td>
                                        <td>${{ item.unitPrice|number_format(2, '.', ',') }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}

                <div class="mt-4 text-center text-md-start">
                    <a href="{{ path('admin_orders_list') }}"
                       class="btn btn-secondary w-100 w-md-auto">
                        Back to Orders
                    </a>
                </div>

            </div>
        </div>

    </div>
{% endblock %}