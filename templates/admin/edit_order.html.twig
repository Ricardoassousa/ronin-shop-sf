{% extends 'base.html.twig' %}

{% block title %}Edit Order Status{% endblock %}

{% block body %}
    <div class="container mt-4 mt-md-5">

        <h1 class="mb-4 text-center">
            Edit Order #{{ order.id }} Status
        </h1>

        <div class="row g-4">

            <div class="col-12 col-md-5">
                <div class="card shadow-sm">
                    <div class="card-body">

                        <h5 class="mb-3">Change Status</h5>

                        {{ form_start(form) }}

                            <div class="mb-3">
                                {{ form_label(form.status) }}
                                {{ form_widget(form.status) }}
                                {{ form_errors(form.status) }}
                            </div>

                            <button type="submit"
                                    class="btn btn-primary w-100">
                                Update Status
                            </button>

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>


            <div class="col-12 col-md-7">
                <div class="card shadow-sm">
                    <div class="card-body">

                        <h5>User</h5>
                        <p>{{ order.user.email }}</p>

                        <h5>Status</h5>
                        <span class="badge
                            {% if order.status == 'paid' %}bg-success
                            {% elseif order.status == 'pending' %}bg-warning
                            {% elseif order.status == 'cancelled' %}bg-danger
                            {% else %}bg-secondary{% endif %}
                        ">
                            {{ order.status|capitalize }}
                        </span>

                        <h5 class="mt-3">Created At</h5>
                        <p>{{ order.createdAt|date('d/m/Y H:i') }}</p>

                        {% if order.items is not empty %}
                            <h5 class="mt-3">Items</h5>

                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for item in order.items %}
                                            <tr>
                                                <td>{{ item.product.name }}</td>
                                                <td>{{ item.quantity }}</td>
                                                <td>
                                                    {{ item.unitPrice|number_format(2, '.', ',') }} â‚¬
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}

                        <div class="mt-3">
                            <a href="{{ path('admin_order_show', { id: order.id }) }}"
                               class="btn btn-secondary w-100 w-md-auto">
                                Back to Order Details
                            </a>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}