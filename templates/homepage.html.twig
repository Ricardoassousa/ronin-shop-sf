{% extends 'base.html.twig' %}

{% block title %}Welcome to Ronin Shop!{% endblock %}

{% block navbar %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="hero bg-dark text-white py-5">
        <div class="container text-center">
            <h1 class="display-4">Welcome to Ronin Shop!</h1>
            <p class="lead">The best online store for high-quality products.</p>
            <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg">Sign In</a>
            <a href="{{ path('app_register') }}" class="btn btn-outline-light btn-lg">Create Account</a>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features bg-light py-5">
        <div class="container text-center">
            <h2 class="mb-4">Why Choose Us?</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <i class="bi bi-truck fs-1 mb-3"></i>
                            <h5 class="card-title">Fast Delivery</h5>
                            <p>We offer fast and reliable shipping so your items arrive on time, every time.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <i class="bi bi-shield-lock fs-1 mb-3"></i>
                            <h5 class="card-title">Secure Payment</h5>
                            <p>Our platform ensures secure and encrypted transactions for your peace of mind.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <i class="bi bi-stars fs-1 mb-3"></i>
                            <h5 class="card-title">Quality Products</h5>
                            <p>We offer only the best, carefully curated products to meet your needs and expectations.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="bg-dark text-white py-4">
        <div class="container text-center">
            <p>&copy; {{ "now"|date("Y") }} Ronin Shop. All rights reserved.</p>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}