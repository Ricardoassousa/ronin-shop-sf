{% extends 'base.html.twig' %}

{% block title %}Forgot Password{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title mb-4 text-center">Forgot Password</h2>

                        {{ form_start(form) }}

                        {# Email Field #}
                        <div class="mb-3">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {
                                'attr': {
                                    'class': 'form-control ' ~ (form.email.vars.errors|length ? 'is-invalid' : '')
                                }
                            }) }}
                            {% for error in form.email.vars.errors %}
                                <div class="invalid-feedback">
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>

                        {# Submit Button #}
                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-primary btn-block">
                                Send Reset Link
                            </button>
                        </div>

                        {{ form_end(form) }}

                        {# Links #}
                        <div class="text-center mt-4">
                            <p class="mb-2 small text-muted">
                                <a href="{{ path('app_login') }}"
                                   class="link-secondary text-decoration-none d-inline-flex align-items-center gap-1">
                                    <i class="bi bi-box-arrow-in-left"></i>
                                    Remembered your password? Login here
                                </a>
                            </p>

                            <p class="small text-muted mb-0">
                                <span>New here?</span>
                                <a href="{{ path('app_register') }}"
                                   class="fw-semibold text-decoration-none ms-1">
                                    Create an account
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}