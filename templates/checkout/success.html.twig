{% extends 'base.html.twig' %}

{% block title %}Checkout - Summary{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title mb-4 text-center">Checkout Summary</h2>

                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        <h4>Shipping Address</h4>
                        <div class="mb-4">
                            <p><strong>{{ address.primaryAddress }}</strong></p>
                            <p>{{ address.secondaryAddress ? address.secondaryAddress : 'No secondary address provided.' }}</p>
                            <p>{{ address.city }}, {{ address.state }} - {{ address.postalCode }}</p>
                            <p>{{ address.country }}</p>
                        </div>

                        <h4>Items in Your Cart</h4>
                        {% if cart.items is not empty %}
                            <ul class="list-group mb-4">
                                {% for item in cart.items %}
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <span>{{ item.product.name }}</span>
                                            {# <span>{{ item.quantity }} x {{ item.product.price|number_format(2, '.', ',') }} {{ currency }}</span> #}
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p>No items in your cart.</p>
                        {% endif %}

                        <h4>Total</h4>
                        <div class="mb-4">
                            <p class="lead">
                                {# Total: {{ cart.totalPrice|number_format(2, '.', ',') }} {{ currency }} #}
                            </p>
                        </div>

                        <div class="text-center">
                            <a href="{{ path('checkout_address') }}" class="btn btn-secondary">Back to Address</a>
                            <a href="{{ path('checkout_confirm') }}" class="btn btn-primary">Confirm Order</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}