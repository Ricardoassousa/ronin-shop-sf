{% extends 'base.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title mb-4 text-center">Edit Category</h2>

                        {{ include('category/_form.html.twig', { 'form': form, 'button_label': 'Update' }) }}

                        <div class="mt-3 text-center">
                            <a href="{{ path('category_index') }}" class="btn btn-secondary">Back to list</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}