{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# DataTables + Bootstrap 5 CSS #}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Categories</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <table id="categoriesTable" class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Active</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    {% set emptyCategory = category.products|length < 1 %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>{{ category.isActive ? 'Yes' : 'No' }}</td>
                        <td>{{ category.createdAt|date('d/m/Y') }}</td>
                        <td>
                            <a href="{{ path('category_show', { id: category.id }) }}" class="btn btn-sm btn-info">Show</a>
                            <a href="{{ path('category_edit', { id: category.id }) }}" class="btn btn-sm btn-warning">Edit</a>
                            {% if emptyCategory == true %}
                                <form action="{{ path('category_delete', { id: category.id }) }}" method="post" style="display:inline-block">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('category_new') }}" class="btn btn-primary mt-3">Create New Category</a>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {# jQuery #}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    {# DataTables JS #}
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#categoriesTable').DataTable({
                pageLength: 10,
                ordering: true,
                searching: true,
                lengthChange: true,
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/en-GB.json"
                },
                columnDefs: [
                    {
                        targets: 4,
                        orderable: false,
                        searchable: false
                    }
                ]
            });
        });
    </script>
{% endblock %}