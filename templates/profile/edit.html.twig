{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title mb-4 text-center">Edit Your Profile</h2>

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}

                        {{ form_start(profileForm) }}

                        <div class="mb-3">
                            {{ form_label(profileForm.email) }}
                            {{ form_widget(profileForm.email, {
                                'attr': {
                                    'class': 'form-control',
                                    'disabled': 'disabled'
                                }
                            }) }}
                            {{ form_errors(profileForm.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(profileForm.password.first, 'New Password') }}
                            {{ form_widget(profileForm.password.first, {
                                'attr': {
                                    'class': 'form-control ' ~ (profileForm.password.first.vars.errors|length ? 'is-invalid' : '')
                                }
                            }) }}

                            {% for error in profileForm.password.first.vars.errors %}
                                <div class="invalid-feedback">
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(profileForm.password.second, 'Confirm New Password') }}
                            {{ form_widget(profileForm.password.second, {
                                'attr': {
                                    'class': 'form-control ' ~ (profileForm.password.second.vars.errors|length ? 'is-invalid' : '')
                                }
                            }) }}

                            {% for error in profileForm.password.second.vars.errors %}
                                <div class="invalid-feedback">
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
                        </div>

                        {{ form_end(profileForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}