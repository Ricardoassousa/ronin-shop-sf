{% extends 'base.html.twig' %}

{% block title %}Create Product{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title mb-4 text-center">Create Product</h2>

                        {{ include('product/_form.html.twig', { 'form': form, 'button_label': 'Create' }) }}

                        <div class="mt-3">
                            <div class="d-grid gap-3">
                                <a href="{{ path('product_index') }}" class="btn btn-secondary">
                                    Back to list
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}