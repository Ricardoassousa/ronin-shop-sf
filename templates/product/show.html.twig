{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block body %}
    <h1>{{ product.name }}</h1>

    {% if product.image %}
        <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="{{ product.name }}" style="max-width:200px;">
    {% endif %}

    <ul class="list-group mt-3">
        <li class="list-group-item"><strong>SKU:</strong> {{ product.sku }}</li>
        <li class="list-group-item"><strong>Price:</strong> {{ product.price | number_format(2, '.', ',') }} USD</li>
        {% if product.discountPrice %}
            <li class="list-group-item"><strong>Discount Price:</strong> {{ product.discountPrice | number_format(2, '.', ',') }} USD</li>
        {% endif %}
        <li class="list-group-item"><strong>Stock:</strong> {{ product.stock ?: 'N/A' }}</li>
        <li class="list-group-item"><strong>Active:</strong> {{ product.isActive ? 'Yes' : 'No' }}</li>
        <li class="list-group-item"><strong>Short Description:</strong> {{ product.shortDescription }}</li>
        <li class="list-group-item"><strong>Description:</strong> {{ product.description }}</li>
    </ul>

    <a href="{{ path('product_edit', { id: product.id }) }}" class="btn btn-warning mt-3">Edit</a>
    <a href="{{ path('product_index') }}" class="btn btn-secondary mt-3">Back to list</a>
{% endblock %}