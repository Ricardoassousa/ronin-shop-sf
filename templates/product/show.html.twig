{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title mb-4 text-center">{{ product.name }}</h2>

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% if product.image %}
                    <div class="text-center mb-4">
                        <img src="{{ asset('uploads/products/' ~ product.image) }}"
                             alt="{{ product.name }}"
                             class="img-fluid"
                             style="max-width:300px;">
                    </div>
                {% endif %}

                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>SKU:</strong> {{ product.sku }}</li>
                    <li class="list-group-item"><strong>Price:</strong>
                        {% if product.discountPrice and product.discountPrice > 0 %}
                            <span class="text-muted text-decoration-line-through">
                                ${{ product.price|number_format(2, '.', ',') }}
                            </span>
                            <span class="text-danger ms-2">
                                ${{ product.finalPrice|number_format(2, '.', ',') }}
                            </span>
                        {% else %}
                            ${{ product.price|number_format(2, '.', ',') }}
                        {% endif %}
                    </li>
                    <li class="list-group-item">
                        <strong>Discount Price:</strong>
                        {% if product.discountPrice and product.discountPrice > 0 %}
                            {{ (product.discountPrice * 100)|number_format(0, '.', ',') }}%
                        {% else %}
                            <span class="text-muted">No discount</span>
                        {% endif %}
                    </li>
                    <li class="list-group-item"><strong>Stock:</strong> {{ product.stock ?: 'N/A' }}</li>
                    <li class="list-group-item"><strong>Active:</strong> {{ product.isActive ? 'Yes' : 'No' }}</li>
                    <li class="list-group-item"><strong>Short Description:</strong> {{ product.shortDescription }}</li>
                    <li class="list-group-item"><strong>Description:</strong> {{ product.description }}</li>
                </ul>

                <div class="mt-4 d-flex justify-content-between flex-column">
                    <a href="{{ path('product_edit', { id: product.id }) }}" class="btn btn-warning btn-block mb-2">Edit</a>
                    <a href="{{ path('product_index') }}" class="btn btn-secondary btn-block">Back to list</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}