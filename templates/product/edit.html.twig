{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .vich-image {
            margin: 0 auto;
            overflow: hidden;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title mb-4 text-center">Edit Product</h2>

                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        {{ include('product/_form.html.twig', { 'form': form, 'button_label': 'Update' }) }}

                        <div class="mt-3">
                            <div class="d-grid gap-3">
                                <a href="{{ path('product_index') }}" class="btn btn-secondary">
                                    Back to list
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}