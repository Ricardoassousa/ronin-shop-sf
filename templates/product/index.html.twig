{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Products</h1>

    <a href="{{ path('product_new') }}" class="btn btn-primary mb-3">Create New Product</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in pagination.items %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price | number_format(2, '.', ',') }} USD</td>
                    <td>{{ product.stock ?: 'N/A' }}</td>
                    <td>{{ product.isActive ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('product_show', { id: product.id }) }}" class="btn btn-sm btn-info">Show</a>
                        <a href="{{ path('product_edit', { id: product.id }) }}" class="btn btn-sm btn-warning">Edit</a>
                        <form action="{{ path('product_delete', { id: product.id }) }}" method="post" style="display:inline-block">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No products found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="pagination">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}