{% extends 'base.html.twig' %}

{% block title %}500 - Internal Server Error | Ronin Shop{% endblock %}

{% block navbar %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <section class="hero bg-dark text-white py-5 min-vh-100 d-flex align-items-center">
        <div class="container text-center">
            <h1 class="display-1 fw-bold text-danger">500</h1>
            <h2 class="display-5 mb-3">Internal Server Error</h2>
            <p class="lead mb-4">
                An unexpected error occurred on the server.<br>
                Please try again later.
            </p>

            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a href="{{ path('homepage') }}"
                   class="btn btn-primary btn-lg px-4 fw-semibold shadow">
                    <i class="bi bi-house-door me-2"></i>
                    Back to Homepage
                </a>

                <a href="javascript:location.reload()"
                   class="btn btn-outline-light btn-lg px-4">
                    <i class="bi bi-arrow-clockwise me-2"></i>
                    Reload Page
                </a>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}