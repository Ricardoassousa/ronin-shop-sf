<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
        <link rel="icon" type="image/svg+xml" href="{{ asset('icons/favicon.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        {% endblock %}
    </head>
    <body>
        <header>
            {% block navbar %}
                <nav class="navbar navbar-light bg-light px-4">
                    <div class="container-fluid d-flex justify-content-between align-items-center">
                        <a class="navbar-brand" href="{{ path('homepage') }}">
                            Ronin Shop
                        </a>

                        <div class="d-flex align-items-center gap-3">
                            {% if app.user %}
                                <a href="{{ path('cart_show') }}"
                                   class="btn btn-outline-secondary position-relative"
                                   title="Shopping Cart">
                                    <i class="bi bi-cart fs-5"></i>
                                    {% if cart is defined and cart is not null and cart.items|length > 0 %}
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                            {{ cart.items|length }}
                                        </span>
                                    {% endif %}
                                </a>

                                <div class="dropdown">
                                    <button
                                        class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center gap-2"
                                        type="button"
                                        id="userDropdown"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false"
                                    >
                                        <i class="bi bi-person-circle fs-5"></i>
                                        {{ app.user.userIdentifier }}
                                    </button>

                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                        <li>
                                            <a class="dropdown-item" href="{{ path('catalog_index') }}">
                                                <i class="bi bi-grid-3x3-gap me-2"></i>
                                                Catalog
                                            </a>
                                        </li>

                                        <li>
                                            <a class="dropdown-item" href="{{ path('app_customer_profile') }}">
                                                <i class="bi bi-person me-2"></i>
                                                My Profile
                                            </a>
                                        </li>

                                        <li>
                                            <a class="dropdown-item" href="{{ path('app_profile') }}">
                                                <i class="bi bi-gear me-2"></i>
                                                Settings
                                            </a>
                                        </li>

                                        {% if is_granted('ROLE_ADMIN') %}
                                            <li>
                                                <a class="dropdown-item" href="{{ path('admin_dashboard') }}">
                                                    <i class="bi bi-speedometer2 me-2"></i>
                                                    Admin Dashboard
                                                </a>
                                            </li>

                                            <li>
                                                <a class="dropdown-item" href="{{ path('category_index') }}">
                                                    <i class="bi bi-tags me-2"></i>
                                                    Category
                                                </a>
                                            </li>

                                            <li>
                                                <a class="dropdown-item" href="{{ path('product_index') }}">
                                                    <i class="bi bi-box-seam me-2"></i>
                                                    Product
                                                </a>
                                            </li>
                                        {% endif %}

                                        <li><hr class="dropdown-divider"></li>

                                        <li>
                                            <form action="{{ path('app_logout') }}" method="post" class="m-0">
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="bi bi-box-arrow-right me-2"></i>
                                                    Logout
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </nav>
            {% endblock %}
        </header>

        {% block body %}{% endblock %}
    </body>
</html>