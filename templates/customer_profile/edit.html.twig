{% extends 'base.html.twig' %}

{% block title %}Customer Profile{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title mb-4 text-center">Customer Profile</h2>

                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        {{ form_start(form) }}

                        <div class="mb-3">
                            {{ form_label(form.firstName) }}
                            {{ form_widget(form.firstName, {
                                'attr': {
                                    'class': 'form-control' ~ (form.firstName.vars.errors|length ? ' is-invalid' : '')
                                }
                            }) }}
                            {% for error in form.firstName.vars.errors %}
                                <div class="invalid-feedback">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.surname) }}
                            {{ form_widget(form.surname, {
                                'attr': {
                                    'class': 'form-control' ~ (form.surname.vars.errors|length ? ' is-invalid' : '')
                                }
                            }) }}
                            {% for error in form.surname.vars.errors %}
                                <div class="invalid-feedback">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.phone) }}
                            {{ form_widget(form.phone, {
                                'attr': {
                                    'class': 'form-control' ~ (form.phone.vars.errors|length ? ' is-invalid' : '')
                                }
                            }) }}
                            {% for error in form.phone.vars.errors %}
                                <div class="invalid-feedback">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.countryPrefixCode) }}
                            {{ form_widget(form.countryPrefixCode, {
                                'attr': {
                                    'class': 'form-control' ~ (form.countryPrefixCode.vars.errors|length ? ' is-invalid' : '')
                                }
                            }) }}
                            {% for error in form.countryPrefixCode.vars.errors %}
                                <div class="invalid-feedback">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.primaryAddress) }}
                            {{ form_widget(form.primaryAddress, {
                                'attr': {
                                    'class': 'form-control' ~ (form.primaryAddress.vars.errors|length ? ' is-invalid' : '')
                                }
                            }) }}
                            {% for error in form.primaryAddress.vars.errors %}
                                <div class="invalid-feedback">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.secondaryAddress) }}
                            {{ form_widget(form.secondaryAddress, {
                                'attr': {
                                    'class': 'form-control' ~ (form.secondaryAddress.vars.errors|length ? ' is-invalid' : '')
                                }
                            }) }}
                            {% for error in form.secondaryAddress.vars.errors %}
                                <div class="invalid-feedback">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.city) }}
                            {{ form_widget(form.city, {
                                'attr': {
                                    'class': 'form-control' ~ (form.city.vars.errors|length ? ' is-invalid' : '')
                                }
                            }) }}
                            {% for error in form.city.vars.errors %}
                                <div class="invalid-feedback">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.country) }}
                            {{ form_widget(form.country, {
                                'attr': {
                                    'class': 'form-select' ~ (form.country.vars.errors|length ? ' is-invalid' : '')
                                }
                            }) }}
                            {% for error in form.country.vars.errors %}
                                <div class="invalid-feedback">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        <div id="state-wrapper" class="mb-3">
                            {{ form_label(form.state) }}
                            {{ form_widget(form.state, {
                                'attr': {
                                    'class': 'form-select' ~ (form.state.vars.errors|length ? ' is-invalid' : '')
                                }
                            }) }}
                            {% for error in form.state.vars.errors %}
                                <div class="invalid-feedback">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.postalCode) }}
                            {{ form_widget(form.postalCode, {
                                'attr': {
                                    'class': 'form-control' ~ (form.postalCode.vars.errors|length ? ' is-invalid' : '')
                                }
                            }) }}
                            {% for error in form.postalCode.vars.errors %}
                                <div class="invalid-feedback">{{ error.message }}</div>
                            {% endfor %}
                        </div>

                        <div class="d-grid mt-3">
                            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            var $country = $('#{{ form.country.vars.id }}');
            var $stateWrapper = $('#state-wrapper');
            var $stateSelect = $('#{{ form.state.vars.id }}');

            var states = {
                'US': {'AL': 'Alabama', 'CA': 'California', 'NY': 'New York'},
                'CA': {'AB': 'Alberta', 'ON': 'Ontario', 'QC': 'Quebec'},
                'BR': {'SP': 'SÃ£o Paulo', 'RJ': 'Rio de Janeiro', 'MG': 'Minas Gerais'}
            };

            function updateStates(country) {
                var selected = $stateSelect.val(); // take the value if selected value
                $stateSelect.html('<option value=""></option>'); // clear options

                if (states[country]) {
                    $.each(states[country], function(code, name) {
                        // mark as selected if current value
                        var selectedAttr = (code == selected) ? ' selected' : '';
                        $stateSelect.append('<option value="' + code + '"' + selectedAttr + '>' + name + '</option>');
                    });
                    $stateWrapper.show();
                } else {
                    $stateWrapper.hide();
                }
            }
        });
    </script>
{% endblock %}