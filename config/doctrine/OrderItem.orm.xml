<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Entity\OrderItem" table="order_item">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="productName" type="string" column="product_name" length="255"/>
        <field name="productSlug" type="string" column="product_slug" length="255" nullable="true"/>
        <field name="productSku" type="string" column="product_sku" length="100"/>
        <field name="productShortDescription" type="string" column="product_short_description" nullable="true"/>
        <field name="productImage" type="string" column="product_image" length="255" nullable="true"/>
        <field name="unitPrice" type="decimal" column="unit_price" scale="2" precision="10"/>
        <field name="subtotal" type="decimal" column="subtotal" scale="2" precision="10"/>
        <field name="discount" type="decimal" column="discount" scale="2" precision="5" nullable="true"/>
        <field name="finalPrice" type="decimal" column="final_price" scale="2" precision="10"/>
        <field name="quantity" type="integer" column="quantity"/>
        <field name="createdAt" type="datetime" column="created_at"/>
        <field name="updatedAt" type="datetime" column="updated_at" nullable="true"/>
        <many-to-one field="orderShop" target-entity="App\Entity\OrderShop" inversed-by="items">
            <join-column name="order_shop_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
        <many-to-one field="product" target-entity="App\Entity\Product">
            <join-column name="product_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>